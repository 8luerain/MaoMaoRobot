<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Activity.MainActivity">


    <RelativeLayout
        android:id="@+id/id_ly_top"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:background="@drawable/top1_bg"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:text="毛毛"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/id_ly_bottom"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
       >

        <ImageButton
      android:layout_gravity="center"
      android:layout_width="150dp"
      android:layout_height="match_parent"
      android:id="@+id/speak_but"
      android:src="@drawable/bd_asr_mic"
      />

        <ProgressBar
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyle"
            android:id="@+id/id_progressbar"
            android:visibility="gone"
            android:layout_gravity="center"/>
    </FrameLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/id_listview"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:layout_above="@+id/id_ly_bottom"
        android:layout_below="@+id/id_ly_top"></ListView>
</RelativeLayout>
